{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "dom",
      "esnext"
    ],
    "types": [
      "node"
    ],
    "module": "es2015",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist/esm",
  },
  "include": [
    "src",
    "types"
  ]
}